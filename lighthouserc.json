{
  "ci": {
    "collect": {
      "url": ["http://localhost:8080"],
      "numberOfRuns": 3,
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage"
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": "warn",
        "categories:accessibility": "warn",
        "categories:best-practices": "warn",
        "categories:seo": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
